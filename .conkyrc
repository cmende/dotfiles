alignment tr
background
double_buffer
draw_shades yes
gap_y 125
if_up_strictness link
maximum_width 320
own_window true
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_transparent true
update_interval 3
use_xft yes
xftfont Bitstream Vera Sans Mono:size=7

#${if_mounted /mnt/storage}/mnt/storage $color${fs_used /mnt/storage}${color grey}/$color${fs_size /mnt/storage} ${color grey}${fs_bar /mnt/storage}
#$endif
TEXT
$nodename - $sysname $kernel on $machine
$stippled_hr
${color grey}Uptime:$color $uptime ${color grey}- Load:$color $loadavg
${color grey}CPU Usage:$color${cpu cpu0}% ${cpubar cpu0}
${color grey}CPU temperature: $color${hwmon 0 temp 1}°C${color grey} | $color${hwmon 1 temp 1}°C
${color grey}RAM Usage:$color $mem${color grey}/$color$memmax ${color grey}-$color $memperc% ${membar}
${color grey}Swap Usage:$color $swap${color grey}/$color$swapmax ${color grey}-$color $swapperc% ${swapbar}
${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
$color$stippled_hr
${color grey}AC adapter: $color${acpiacadapter ADP1}
${color grey}Battery charge level: $color${battery_percent BAT1}%
${if_empty $battery_time}$else${color grey}Time left on battery: $color$battery_time
$endif${if_up wlan0}$color$stippled_hr
${color grey}Wifi ($color${wireless_essid wlan0}${color grey}):
${color grey}Link quality:$color ${wireless_link_qual_perc wlan0}% ${color grey}($color${wireless_bitrate wlan0}${color grey})
${color grey}Current speed: down:$color ${downspeed wlan0}/s ${color grey}up:$color ${upspeed wlan0}/s
${color grey}Total traffic: down:$color ${totaldown wlan0} ${color grey}up:$color ${totalup wlan0}
$endif${if_up eth0}$color$stippled_hr
${color grey}Ethernet:
${color grey}Current speed: down:$color ${downspeed eth0}/s ${color grey}up:$color ${upspeed eth0}/s
${color grey}Total traffic: down:$color ${totaldown eth0} ${color grey}up:$color ${totalup eth0}
$endif$color$stippled_hr
${color grey}File systems:
/            $color${fs_used /}${color grey}/$color${fs_size /}     ${color grey}${fs_bar /}
/home        $color${fs_used /home}${color grey}/$color${fs_size /home}    ${color grey}${fs_bar /home}
$stippled_hr
${color}Name             PID     CPU%   MEM%
${color #ddaa00} ${top name 1}  ${top pid 1} ${top cpu 1} ${top mem 1}
${color grey} ${top name 2}  ${top pid 2} ${top cpu 2} ${top mem 2}
${color grey} ${top name 3}  ${top pid 3} ${top cpu 3} ${top mem 3}
${color grey} ${top name 4}  ${top pid 4} ${top cpu 4} ${top mem 4} 
